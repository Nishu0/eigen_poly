FROM python:3.13-slim

WORKDIR /app

# Install system deps for asyncpg, web3, cryptography
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy backend code
COPY . .

# Install Python deps
RUN pip install --no-cache-dir -e .

EXPOSE 8000

# MNEMONIC is auto-injected by EigenCompute TEE KMS
# DATABASE_URL and CHAINSTACK_NODE are set in EigenCloud dashboard
CMD python -m uvicorn server:app --host 0.0.0.0 --port ${PORT:-8000}
