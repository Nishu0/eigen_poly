{
  "name": "eigen-poly",
  "private": true,
  "packageManager": "bun@1.1.38",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup:frontend": "bun install",
    "setup:backend": "bun run --cwd apps/backend setup",
    "setup": "bun run setup:frontend && bun run setup:backend",
    "dev:frontend": "bun run --cwd apps/web dev",
    "dev:backend": "bun run --cwd apps/backend dev",
    "dev:all": "turbo run dev --filter=web --filter=backend --parallel",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format"
  },
  "devDependencies": {
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  }
}
