{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@eigenpoly/ui/*": ["packages/ui/src/*"],
      "@eigenpoly/ui": ["packages/ui/src/index.ts"]
    }
  }
}
